<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.MainActivity$PlaceholderFragment"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:gravity="bottom">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/logoview"
            android:layout_gravity="center|top"
            android:background="@drawable/title"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/pokemonbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pokemonbuttonselector" />

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/habilitiesbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pokemonbuttonselector" />

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/typesbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pokemonbuttonselector" />

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/strategiesbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pokemonbuttonselector" />

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/objectsbutton"
            android:background="@drawable/pokemonbuttonselector"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/mtbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mtbuttonselector" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eeveeview"
                android:background="@drawable/eevee"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:adjustViewBounds="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="bottom|left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/espeonview"
                android:cropToPadding="false"
                android:background="@drawable/espeon"
                android:layout_gravity="bottom|right"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
