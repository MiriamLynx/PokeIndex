<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/itemtxt"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        android:visibility="visible"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pkimage"
        android:background="@drawable/blastoisei"
        android:layout_alignTop="@+id/typea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typea"
        android:background="@drawable/agua"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/itemtxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeb"
        android:background="@drawable/acero"
        android:layout_below="@+id/typea"
        android:layout_alignLeft="@+id/typea"
        android:layout_alignStart="@+id/typea" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/desctext"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/pkimage"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speakButton"
        android:layout_marginTop="23dp"
        android:background="@drawable/speakselector"
        android:visibility="visible"
        android:layout_below="@+id/desctext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/pptxt"
        android:textColor="@android:color/white"
        android:text="puntos"
        android:textStyle="bold"
        android:layout_alignTop="@+id/speakButton"
        android:layout_alignRight="@+id/pkimage"
        android:layout_alignEnd="@+id/pkimage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/pottxt"
        android:textColor="@android:color/white"
        android:text="potencia"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/speakButton"
        android:layout_alignLeft="@+id/pptxt"
        android:layout_alignStart="@+id/pptxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/prectxt"
        android:textColor="@android:color/white"
        android:text="precision"
        android:textStyle="bold"
        android:layout_below="@+id/pottxt"
        android:layout_alignLeft="@+id/pottxt"
        android:layout_alignStart="@+id/pottxt"
        android:layout_marginTop="21dp" />

</RelativeLayout>
